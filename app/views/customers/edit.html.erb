<div class="container">
       <%= form_for @customer, url: {action: :update} do |f| %>
              <h3>Edit Customer</h3>
              <%= render :partial => 'customers/form', :locals => { :f => f } %>
              <div class='float-right'>
                     <%= link_to 'Back', { controller: 'customers', action: 'index'}, class: 'btn btn-sm btn-primary' %>
                     <%= f.submit 'Update', class:"btn btn-sm btn-success" %>
              </div>
       <% end %>
</div>